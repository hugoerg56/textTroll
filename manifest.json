 {
  "manifest_version": 2,

  "name": "Troll Pics",
  "description": "Replace words like :perotenemospatria: to a troll image.",
  "version": "1.0",

  "permissions": [ "tabs",
    "https://*/*","http://*/*"
  ],
  "content_scripts": [
  {
    "matches": ["http://*/*","https://*/*"],
    "js": ["jquery-1.9.1.min.js", "text_troll.js"],
    "run_at": "document_end",
    "all_frames": true
  }
 ],
  "browser_action": {
    "default_icon": "icon.png"
  }
}