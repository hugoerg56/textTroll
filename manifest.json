 {
  "manifest_version": 2,

  "name": "Text Troll",
  "description": "Replace words like :perotenemospatria: to a troll image.",
  "version": "1.2",

  "permissions": [ "storage",
    "https://*/*","http://*/*"
  ],
  "content_scripts": [
  {
    "matches": ["http://*/*","https://*/*","file://*/*"],
    "js": ["libs/jquery-1.9.1.min.js", "libs/underscore-min.js", "text_troll.js"],
    "run_at": "document_end",
    "all_frames": true
  }
 ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": ["libs/underscore-min.map", "images/*"]
}